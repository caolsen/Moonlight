default_platform(:ios)

platform :ios do
  desc "Create keychain for Github Actions"
  lane :setup_keychain do
    create_keychain(
      name: "ci_keychain",
      password: "meow",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )
  end

  desc "Description of what the lane does"
  lane :build do
    api_key = app_store_connect_api_key(
      key_id: ENV["APPLE_KEY_ID"],
      issuer_id: ENV["APPLE_ISSUER_ID"],
      key_content: ENV["APPLE_API_KEY"],
      git_basic_authorization: ENV["MATCH_PAT"],
      in_house: false,
    )

    match(
      api_key: api_key,
      readonly: true,
      keychain_name: "ci_keychain",
      keychain_password: "meow"
    )

    build_app(scheme: "Moonlight")
  end
end
